<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/View_users"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="8dp"
        android:text="Delivery Mypão"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView_total_entregas"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botao_baixa_lista"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Baixar entregas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listview_users" />

    <ListView
        android:id="@+id/listview_users"
        android:layout_width="0dp"
        android:layout_height="270dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_total_entregas_feitas" />

    <Button
        android:id="@+id/button_quadrante1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Quad 1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botao_baixa_lista" />

    <Button
        android:id="@+id/button_quadrante2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="Quad 2"
        app:layout_constraintStart_toEndOf="@+id/button_quadrante1"
        app:layout_constraintTop_toBottomOf="@+id/botao_baixa_lista" />

    <Button
        android:id="@+id/button_quadrante3"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="Quad 3"
        app:layout_constraintStart_toEndOf="@+id/button_quadrante2"
        app:layout_constraintTop_toBottomOf="@+id/botao_baixa_lista" />

    <Button
        android:id="@+id/button_quadrante4"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Quad 4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_quadrante1" />

    <Button
        android:id="@+id/button_quadrante5"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="Quad 5"
        app:layout_constraintStart_toEndOf="@+id/button_quadrante4"
        app:layout_constraintTop_toBottomOf="@+id/button_quadrante2" />

    <Button
        android:id="@+id/button_quadrante6"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="Quad 6"
        app:layout_constraintStart_toEndOf="@+id/button_quadrante5"
        app:layout_constraintTop_toBottomOf="@+id/button_quadrante3" />

    <Button
        android:id="@+id/button_horario1"
        android:layout_width="38dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="1"
        app:layout_constraintStart_toEndOf="@+id/button_quadrante3"
        app:layout_constraintTop_toBottomOf="@+id/botao_baixa_lista" />

    <Button
        android:id="@+id/button_horario2"
        android:layout_width="38dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:text="2"
        app:layout_constraintStart_toEndOf="@+id/button_horario1"
        app:layout_constraintTop_toTopOf="@+id/button_horario1" />

    <Button
        android:id="@+id/button_horario3"
        android:layout_width="38dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:text="3"
        app:layout_constraintStart_toEndOf="@+id/button_quadrante6"
        app:layout_constraintTop_toTopOf="@+id/button_quadrante6" />

    <Button
        android:id="@+id/button_horario4"
        android:layout_width="38dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:text="4"
        app:layout_constraintStart_toEndOf="@+id/button_horario3"
        app:layout_constraintTop_toTopOf="@+id/button_horario3" />

    <TextView
        android:id="@+id/textView_quant_pao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="vazio"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/textView_titulo_quant"
        app:layout_constraintStart_toStartOf="@+id/textView_titulo_quant"
        app:layout_constraintTop_toBottomOf="@+id/textView_titulo_quant" />

    <TextView
        android:id="@+id/textView_titulo_quant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:text="Quantidade total"
        app:layout_constraintEnd_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/button_quadrante4" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Quantidade entregue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_quadrante6" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Pão:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_quant_pao" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Queijo:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView_quant_queijo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="vazio"
        app:layout_constraintEnd_toEndOf="@+id/textView_titulo_quant"
        app:layout_constraintStart_toStartOf="@+id/textView_titulo_quant"
        app:layout_constraintTop_toBottomOf="@+id/textView_quant_pao" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Presunto:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView_quant_presunto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="vazio"
        app:layout_constraintEnd_toEndOf="@+id/textView_quant_queijo"
        app:layout_constraintStart_toStartOf="@+id/textView_quant_queijo"
        app:layout_constraintTop_toBottomOf="@+id/textView_quant_queijo" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Manteiga:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView_quant_manteiga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="vazio"
        app:layout_constraintEnd_toEndOf="@+id/textView_quant_presunto"
        app:layout_constraintStart_toStartOf="@+id/textView_quant_presunto"
        app:layout_constraintTop_toBottomOf="@+id/textView_quant_presunto" />

    <TextView
        android:id="@+id/textView_quant_pendente_pao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="vazio"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView_quant_pendente_queijo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="vazio"
        app:layout_constraintEnd_toEndOf="@+id/textView_quant_pendente_pao"
        app:layout_constraintStart_toStartOf="@+id/textView_quant_pendente_pao"
        app:layout_constraintTop_toBottomOf="@+id/textView_quant_pendente_pao" />

    <TextView
        android:id="@+id/textView_quant_pendente_presunto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="vazio"
        app:layout_constraintEnd_toEndOf="@+id/textView_quant_pendente_queijo"
        app:layout_constraintStart_toStartOf="@+id/textView_quant_pendente_queijo"
        app:layout_constraintTop_toBottomOf="@+id/textView_quant_pendente_queijo" />

    <TextView
        android:id="@+id/textView_quant_pendente_manteiga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="vazio"
        app:layout_constraintEnd_toEndOf="@+id/textView_quant_pendente_presunto"
        app:layout_constraintStart_toStartOf="@+id/textView_quant_pendente_presunto"
        app:layout_constraintTop_toBottomOf="@+id/textView_quant_pendente_presunto" />

    <TextView
        android:id="@+id/textView_total_entregas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:text="Total entregas: "
        android:textColor="@android:color/holo_red_dark"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_total_entregas_feitas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Entregas feitas:"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_total_entregas" />

    <Button
        android:id="@+id/botao_inicia_entregas"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:text="A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>